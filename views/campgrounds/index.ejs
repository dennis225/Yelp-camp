<%-include ("../partials/header") %>	
	<div class= "container">
			<header class="jumbotron">
				<div class="container">
					<h1 class="display-3">Welcome to YelpCamp!!</h1>
					<p>
						 View our handpicked campgrounds from all over the world
					</p>
					<p>
						<a class="btn btn-primary btn-lg" href="/campground/new">Add a new campground</a>
					</p>
				</div>
			</header>
	
			<div class="row">
				<% campgrounds.forEach(function(camp){ %>
					<div class="col-md-4 col-sm-6">
						<div class="thumbnail" >
							<img src="<%= camp["image"] %>" style="width:100%; height:230px">  
						</div>
						<div class="caption">
							<h4>
								<%= camp["name"] %>
							</h4>
						</div>
						<!-- link to respective description -->
						<a href="/campground/<%=camp._id%>" class="btn btn-primary">More Info</a>
						
					</div>
				<% }); %>
			</div>

		
	</div>


<%-include ("../partials/footer") %>